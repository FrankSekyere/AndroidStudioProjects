<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:visibility="visible"
    tools:context="com.eventsforstudents.eventsforstudents.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="100dp">

        <EditText
            android:id="@+id/username"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="left"
            android:inputType="textEmailAddress"
            android:hint="Username"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:backgroundTint="#fff"
            android:drawableLeft="@drawable/ic_action_username"
            android:drawablePadding="75dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="left"
            android:ems="10"
            android:inputType="textWebPassword"
            android:hint="Password"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:backgroundTint="#fff"
            android:drawableLeft="@drawable/ic_action_password"
            android:drawablePadding="75dp" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/buttonstyleselector"
            android:text="@string/login"
            android:textColor="#fff" />

        <Button
            android:id="@+id/signUp_btn"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/editttextstyle"
            android:text="@string/sign_up"
            android:textColor="#fff"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
